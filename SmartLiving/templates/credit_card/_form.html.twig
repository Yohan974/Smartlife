{{ form_start(form, {'attr': {'class': 'row p-4'}}) }}
<div class="col-12 form-group">
    {{ form_label(form.cardOwnerName, 'Nom') }}
    {{ form_widget(form.cardOwnerName, {'attr': {'class': 'form-control border-radius-10', 'placeholder':'John Doe'}}) }}
    {{ form_errors(form.cardOwnerName) }}
</div>
<div class="col-6 form-group">
    {{ form_label(form.number, 'Numéro de carte') }}
    {{ form_widget(form.number, {'attr': {'class': 'form-control border-radius-10', 'placeholder':'xxxx xxxx xxxx xxxx'}}) }}
    {{ form_errors(form.number) }}
</div>
<div class="col-6 form-group">
    {{ form_label(form.expirationDate, 'Date d\'expiration') }}
    {{ form_widget(form.expirationDate, {'attr': {'class': 'form-control border-radius-10', 'placeholder':'01/2025'}}) }}
    {{ form_errors(form.expirationDate) }}
</div>
<div class="form-group">
    {{ form_widget(form.isDefault, {'attr': {'class': 'mx-3'}}) }}
    {{ form_label(form.isDefault, 'Définir en tant que modede paiement par défaut') }}
    {{ form_errors(form.isDefault) }}
</div>
<div class="col-12 form-group">
    <button class="col-12 btn btn-midnight-blue  mt-4" type="submit">{{ button_label|default('Enregistrer la carte') }}</button>
</div>
{{ form_end(form) }}
