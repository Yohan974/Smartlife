{% extends 'base.html.twig' %}

{% block title %}Changer mot de passe{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <!-- CUSTOM CSS -->
        <link rel="stylesheet" href="{{ asset('css/modal.css') }}">
    {% endblock %}

{% block body %}
    <div class="main-content-wrapper row">
        <div class="d-flex flex-column form-wrapper my-auto mx-auto col-10 lg-6 pl-0 pr-0" id="account-details-modal-content-container">
            <div class="account-detail-block">
                <a href="{{ path('app_account') }}" class="close"></a>
                <h1 class="title-h4-black margin-top-18px p-0">Changer mot de passe</h1>
                <div class="separator-login-title"></div>

                <form method="post" class="d-flex flex-column p-4">
                    <div class="form-group mt-2">
                        {% if incorrectPasswordMessage is defined %} <div class=" alert alert-danger">{{ incorrectPasswordMessage }} </div>{% endif %}
                        <label for="old-password">Ancien mot de passe :</label>
                        <input class="form-control border-radius-10" type="password" id="old-password" name="old-password" />
                    </div>
                    <div class="form-group mt-2">
                        {% if incorrectConfirmationMessage is defined %} <div class=" alert alert-danger">{{ incorrectConfirmationMessage }} </div>{% endif %}
                        <label for="new-password">Nouveau mot de passe :</label>
                        <input class="form-control border-radius-10" type="password" id="new-password" name="new-password" />
                    </div>
                    <div class="form-group mt-2">
                        {% if incorrectConfirmationMessage is defined %} <div class=" alert alert-danger">{{ incorrectConfirmationMessage }} </div>{% endif %}
                        <label for="new-password-confirmation">Confirmation du nouveau mot de passe :</label>
                        <input class="form-control border-radius-10" type="password" id="new-password-confirmation" name="new-password-confirmation"/>
                    </div>
                    <input class ="btn btn-midnight-blue mt-4 mb-3" type="submit" value="Enregistrer les modifications">
                </form>

            </div>

        </div>
    </div>
{% endblock %}